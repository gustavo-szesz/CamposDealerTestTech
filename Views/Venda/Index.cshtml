@model IEnumerable<Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h1>Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nova Venda</a>
    <a asp-controller="Home" asp-action="ImportarVendas" class="btn btn-success">Carregar Vendas da API</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Valor Unitário</th>
            <th>Data da Venda</th>
            <th>Valor Total</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.idVenda)</td>
            <td>@Html.DisplayFor(modelItem => item.Cliente.nmCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.Produto.dscProduto)</td>
            <td>@Html.DisplayFor(modelItem => item.qtdVenda)</td>
            <td>@Html.DisplayFor(modelItem => item.vlrUnitarioVenda)</td>
            <td>@Html.DisplayFor(modelItem => item.dthVenda)</td>
            <td>@Html.DisplayFor(modelItem => item.vlrTotalVenda)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idVenda" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idVenda" class="btn btn-sm btn-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.idVenda" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>