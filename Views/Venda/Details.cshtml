@model Models.Venda
@{
    ViewData["Title"] = "Detalhes da Venda";
}

<h1>Detalhes da Venda</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Informações da Venda</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID da Venda:</dt>
                    <dd class="col-sm-8">@Model.idVenda</dd>
                    
                    <dt class="col-sm-4">Cliente:</dt>
                    <dd class="col-sm-8">@(Model.Cliente?.nmCliente ?? "Não especificado")</dd>
                    
                    <dt class="col-sm-4">Produto:</dt>
                    <dd class="col-sm-8">@(Model.Produto?.dscProduto ?? "Não especificado")</dd>
                    
                    <dt class="col-sm-4">Quantidade:</dt>
                    <dd class="col-sm-8">@Model.qtdVenda</dd>
                    
                    <dt class="col-sm-4">Valor Unitário:</dt>
                    <dd class="col-sm-8">@Model.vlrUnitarioVenda.ToString("C")</dd>
                    
                    <dt class="col-sm-4">Data da Venda:</dt>
                    <dd class="col-sm-8">@Model.dthVenda.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Valor Total:</dt>
                    <dd class="col-sm-8">@Model.vlrTotalVenda.ToString("C")</dd>
                </dl>
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.idVenda" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar para Lista
            </a>
        </div>
    </div>
</div>