@model Models.Cliente
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCliente" />
            
            <div class="form-group mb-3">
                <label asp-for="nmCliente" class="control-label">Nome</label>
                <input asp-for="nmCliente" class="form-control" required />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" required />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}