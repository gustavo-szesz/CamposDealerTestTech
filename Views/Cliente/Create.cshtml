@model Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h1>Cadastrar Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="nmCliente" class="control-label">Nome do Cliente</label>
                <input asp-for="nmCliente" class="form-control" />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}