@model Models.Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idProduto" />
            
            <div class="form-group mb-3">
                <label asp-for="dscProduto" class="control-label">Descrição</label>
                <input asp-for="dscProduto" class="form-control" required />
                <span asp-validation-for="dscProduto" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="vlrUnitario" class="control-label">Valor Unitário</label>
                <input asp-for="vlrUnitario" class="form-control" type="number" step="0.01" min="0" required />
                <span asp-validation-for="vlrUnitario" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}