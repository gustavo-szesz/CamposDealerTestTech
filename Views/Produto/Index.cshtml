@model IEnumerable<Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Produto</a>
    <a asp-controller="Home" asp-action="ImportarProdutos" class="btn btn-success">Carregar Produtos da API</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Descrição
            </th>
            <th>
                Valor Unitário
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dscProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vlrUnitario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProduto" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idProduto" class="btn btn-sm btn-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.idProduto" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>